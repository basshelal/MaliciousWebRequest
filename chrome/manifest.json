{
  "manifest_version": 2,
  "name": "Malicious Web Request Demo",
  "short_name": "Malicious",
  "description": "Malicious Web Request Demo",
  "version": "1.1",
  "minimum_chrome_version": "38",
  "permissions": [
    "storage",
    "tabs",
    "chrome://favicon/",
    "webRequest",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {

  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "js": [
        "shared.js",
        "main.js"
      ],
      "css": []
    }
  ],
  "background": {
    "scripts": [
      "shared.js",
      "background.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
    "main.js",
    "fonts/*"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'; img-src chrome://favicon;"
}
