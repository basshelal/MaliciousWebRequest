{
  "manifest_version": 2,
  "name": "No Facebook!",
  "short_name": "No Facebook!",
  "description": "Block all Facebook content, \uD83D\uDD95 you Mark Zuckerberg",
  "version": "1.1",
  "minimum_chrome_version": "38",
  "permissions": [
    "storage",
    "tabs",
    "chrome://favicon/",
    "webRequest",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/logo-16.png",
    "48": "assets/logo-48.png",
    "128": "assets/logo-128.png",
    "256": "assets/logo-256.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "js": [
        "shared.js",
        "main.js"
      ],
      "css": []
    }
  ],
  "background": {
    "scripts": [
      "shared.js",
      "background.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
    "main.js",
    "fonts/*"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'; img-src chrome://favicon;"
}
